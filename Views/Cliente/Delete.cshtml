@model Cliente;
@{
    ViewData["Title"] = "Deletar Cliente";
}

<h1>Deletar Cliente</h1>
<form asp-action="DeletarCliente" asp-controller="Cliente" method="post">

    <div class="row">

        <div class="col-lg-12">

            <div class="form-group">
                <label>Nome:</label>
                <input asp-for="NomeCliente" type="text" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label>CPF:</label>
                <input asp-for="CPFCliente" type="text" pattern="[0-9]{3}\.[0-9]{3}\.[0-9]{3}-[0-9]{2}" title="Formato correto: 999.999.999-99"class="form-control" readonly>
            </div>

            <div class="form-group">
                <label>Endere√ßo:</label>
                <input asp-for="EndCliente" type="text" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input asp-for="EmailCliente" type="email" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label>Telefone:</label>
                <input asp-for="TelCliente" type="tel" pattern="[0-9]{2}-[0-9]{9}" title="Formato correto: 99-999999999" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label>Data de Nascimento:</label>
                <input asp-for="DataNasc" type="date" class="form-control" readonly>
            </div>

            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn-primary">Deletar Cliente</button>
                    <button type="reset" asp-action="Get" asp-controller="Cliente" class="btn-cancelar">Cancelar</button>
                </center>
            </div>

        </div>

    </div>

</form>