@model Cliente;
@{
    ViewData["Title"] = "Editar Cliente";
    string? uniqueAlert = ViewData["uniqueAlert"] as string;
}

<h1>Editar Cliente</h1>
<form asp-action="EditarCliente" asp-controller="Cliente" method="post">

    <div class="row">

        <div class="col-lg-12">

            <div class="form-group">
                <label>Codigo:</label>
                <input asp-for="CodCliente" type="text" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label>Nome:</label>
                @{
                    if (uniqueAlert != null)
                    {
                        <p style="color: red;">@uniqueAlert !</p>
                    }
                }
                <input asp-for="NomeCliente" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <label>CPF:</label>
                <input asp-for="CPFCliente" type="text" pattern="[0-9]{3}\.[0-9]{3}\.[0-9]{3}-[0-9]{2}" title="Formato correto: 999.999.999-99"class="form-control" required>
            </div>

            <div class="form-group">
                <label>Endereço:</label>
                <input asp-for="EndCliente" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input asp-for="EmailCliente" type="email" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Telefone:</label>
                <input asp-for="TelCliente" type="tel" pattern="[0-9]{2}-[0-9]{9}" title="Formato correto: 99-999999999" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Data de Nascimento:</label>
                <input asp-for="DataNasc" type="date" class="form-control" required>
            </div>

            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn-primary">Salvar Alterações</button>
                    <button class="btn-secondary"><a asp-action="Get" asp-controller="Cliente">Cancelar</a></button>
                </center>
            </div>

        </div>

    </div>

</form>