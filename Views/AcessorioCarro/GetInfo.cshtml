@model Carro;
@{
    ViewData["Title"] = "Ver Carro";
}
@{
    List<Acessorio> Acessorios = ViewData["Acessorios"] as List<Acessorio>;
    List<AcessorioCarro> AcessoriosCarros = ViewData["AcessoriosCarros"] as List<AcessorioCarro>;
}
<h1>Informacoes Detalhadas</h1>
    <div class="row">

        <div class="col-lg-12">

            <div class="form-group">
                <label>Codigo e nome:</label>
                <p>@Model.CodCarro : @Model.ModeloCarro</p>
            </div>

            <div class="form-group">
                <label>Acess√≥rios:</label>
                @foreach(AcessorioCarro item in AcessoriosCarros)
                {
                    if (item.FkCarroCodCarro == Model.CodCarro)
                    {
                        foreach(Acessorio acessorio in Acessorios)
                        {
                            if (item.FkAcessorioCodAcessorio == acessorio.CodAcessorio)
                            {
                                <p>@acessorio.NomeAcessorio 
                                    <a asp-controller="AcessorioCarro" asp-action="Delete" asp-route-id="@item.CodAcessorioCarro">
                                        <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24">
                                            <path d="M280-120q-33 0-56.5-23.5T200-200v-520h-40v-80h200v-40h240v40h200v80h-40v520q0 33-23.5 56.5T680-120H280Zm400-600H280v520h400v-520ZM360-280h80v-360h-80v360Zm160 0h80v-360h-80v360ZM280-720v520-520Z"/>
                                        </svg>
                                    </a>
                                </p>
                            }
                        }
                    }
                }
            </div>
            </div>
        </div>
    </div>