@model AcessorioCarro;
@{
    ViewData["Title"] = "Deletar acessorio";
}
@{
    List<Acessorio> Acessorios = ViewData["Acessorios"] as List<Acessorio>;
    Carro carro = ViewData["Carro"] as Carro;
}
<h1>Deletar acessorio</h1>
<form asp-action="DeletarAcessorioCarro" asp-controller="AcessorioCarro" method="post">

    <div class="row">

        <div class="col-lg-12">

            <div class="form-group">
                <label>Codigo e modelo do carro:</label>
                <p>@carro.CodCarro</p>
            </div>

            <div class="form-group">
                <label>Acessorio:</label>
                @foreach(Acessorio item in Acessorios)
                {
                    if (item.CodAcessorio == Model.FkAcessorioCodAcessorio)
                    {
                        <p>@item.NomeAcessorio</p>
                    }
                }
            </div>

            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>

            <div class="card-footer">
                <center>
                    <button type="submit" class="btn-primary">Excluir acessorio</button>
                    <button class="btn-secondary"><a asp-action="Get" asp-controller="AcessorioCarro">Cancelar</a></button>
                </center>
            </div>

        </div>

    </div>

</form>