@model Funcao;
@{
    ViewData["Title"] = "Ver Funcao";
}
<h1>Informacoes Detalhadas</h1>
    <div class="row">

        <div class="col-lg-12">

            <div class="form-group">
                <h3>Codigo:</h3>
                <p>@Model.CodFuncao</p>
            </div>

            <div class="form-group">
                <h3>Nome:</h3>
                <p>@Model.NomeFuncao</p>
            </div>

            <div class="form-group">
                <h3>Descricao:</h3>
                <p>@Model.DescricaoFuncao</p>
            </div>

        </div>

    </div>