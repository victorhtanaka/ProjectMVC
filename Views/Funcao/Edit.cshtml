@model Funcao;
@{
    ViewData["Title"] = "Editar Funcao";
}
<h1>Editar Funcao</h1>
<form asp-action="EditarFuncao" asp-controller="Funcao" method="post">

    <div class="row">

        <div class="col-lg-12">

            <div class="form-group">
                <label>Nome:</label>
                <input asp-for="NomeFuncao" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Descricao:</label>
                <input asp-for="DescricaoFuncao" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn-primary">Salvar alterações</button>
                    <a asp-action="Get" asp-controller="Funcao" class="btn-secondary">Cancelar</a>
                </center>
            </div>

        </div>

    </div>

</form>