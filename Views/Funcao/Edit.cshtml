@model Funcao;
@{
    ViewData["Title"] = "Editar Funcao";
    string? uniqueAlert = ViewData["uniqueAlert"] as string;
}
<h1>Editar Funcao</h1>
<form asp-action="EditarFuncao" asp-controller="Funcao" method="post">

    <div class="row">

        <div class="col-lg-12">
            <div class="form-group">
                <label>Codigo:</label>
                <input asp-for="CodFuncao" type="text" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label>Nome:</label>
                @{
                    if (uniqueAlert != null)
                    {
                        <p style="color: red;">@uniqueAlert !</p>
                    }
                }
                <input asp-for="NomeFuncao" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Descricao:</label>
                <input asp-for="DescricaoFuncao" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn-primary">Salvar alterações</button>
                    <button class="btn-secondary"><a asp-action="Get" asp-controller="Funcao">Cancelar</a></button>
                </center>
            </div>

        </div>

    </div>

</form>