@model Funcao;
@{
    ViewData["Title"] = "Adicionar Funcao";
}

<h1>Criar Funcao</h1>
<form asp-action="CriarFuncao" asp-controller="Funcao" method="post">

    <div class="row">

        <div class="col-lg-12">

            <div class="form-group">
                <label>Nome:</label>
                <input asp-for="NomeFuncao" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Descricao:</label>
                <input asp-for="DescricaoFuncao" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn-primary">Adicionar Funcao</button>
                    <button type="reset" asp-action="Get" asp-controller="Funcao" class="btn-cancelar">Cancelar</button>
                </center>
            </div>

        </div>

    </div>

</form>