@model Funcao;
@{
    ViewData["Title"] = "Deletar Funcao";
}

<h1>Deletar Funcao</h1>
<form asp-action="DeletarFuncao" asp-controller="Funcao" method="post">

    <div class="row">

        <div class="col-lg-12">

            <div class="form-group">
                <label>Codigo:</label>
                <input asp-for="CodFuncao" type="text" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label>Nome:</label>
                <input asp-for="NomeFuncao" type="text" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label>Descricao:</label>
                <input asp-for="DescricaoFuncao" type="text" class="form-control" readonly>
            </div>

            <div class="form-group-2">
                <center>
                    <button type="submit" class="btn-delete">Excluir Funcao</button>
                    <button type="reset" asp-action="Get" asp-controller="Funcao" class="btn-cancelar">Cancelar</button>
                </center>
            </div>

        </div>

    </div>

</form>