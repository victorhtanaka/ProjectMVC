@model Filial;
@{
    ViewData["Title"] = "Adicionar Filial";
    string? uniqueAlert = ViewData["uniqueAlert"] as string;
}

<h1>Criar Filial</h1>
<form asp-action="CriarFilial" asp-controller="Filial" method="post">

    <div class="row">

        <div class="col-lg-12">

            <div class="form-group">
                <label>Nome:</label>
                @{
                    if (uniqueAlert != null)
                    {
                        <p style="color: red;">@uniqueAlert !</p>
                    }
                }
                <input asp-for="NomeFilial" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Endere√ßo:</label>
                <input asp-for="EndFilial" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Telefone:</label>
                <input asp-for="TelFilial" type="text" pattern="[0-9]{2}-[0-9]{9}" title="Formato correto: 99-999999999" class="form-control" required>
            </div>

            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn-primary">Adicionar Filial</button>
                    <button class="btn-secondary"><a asp-action="Get" asp-controller="Filial">Cancelar</a></button>
                </center>
            </div>

        </div>

    </div>

</form>