@model Filial;
@{
    ViewData["Title"] = "Adicionar Filial";
}

<h1>Criar Filial</h1>
<form asp-action="CriarFilial" asp-controller="Filial" method="post">

    <div class="row">

        <div class="col-lg-12">

            <div class="form-group">
                <label>Nome:</label>
                <input asp-for="NomeFilial" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn-primary">Adicionar Filial</button>
                    <a asp-action="Get" asp-controller="Filial" class="btn-secondary">Cancelar</a>
                </center>
            </div>

        </div>

    </div>

</form>