@model Filial;
@{
    ViewData["Title"] = "Deletar Filial";
}

<h1>Deletar Filial</h1>
<form asp-action="DeletarFilial" asp-controller="Filial" method="post">

    <div class="row">

        <div class="col-lg-12">

            <div class="form-group">
                <label>Codigo:</label>
                <input asp-for="CodFilial" type="text" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label>Nome:</label>
                <input asp-for="NomeFilial" type="text" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label>Endere√ßo:</label>
                <input asp-for="EndFilial" type="text" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label>Telefone:</label>
                <input asp-for="TelFilial" type="text" class="form-control" readonly>
            </div>

            <div class="form-group-2">
                <center>
                    <button type="submit" class="btn-delete">Excluir Filial</button>
                    <button class="btn-secondary"><a asp-action="Get" asp-controller="Filial">Cancelar</a></button>
                </center>
            </div>

        </div>

    </div>

</form>