@model Relatorio;
@{
    ViewData["Title"] = "Editar Relatorio";
}
<h1>Criar Relatorio</h1>
<form asp-action="CriarRelatorio" asp-controller="Relatorio" method="post">

    <div class="row">

        <div class="col-lg-12">
            <div class="form-group">
                <label>Descricao:</label>
                <input asp-for="DescRelatorio" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Codigo agendamento:</label>
                <input asp-for="FkAgendaCodAgenda" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn-primary">Adicionar Relatorio</button>
                    <button class="btn-secondary"><a asp-action="Get" asp-controller="Relatorio">Cancelar</a></button>
                </center>
            </div>

        </div>

    </div>

</form>