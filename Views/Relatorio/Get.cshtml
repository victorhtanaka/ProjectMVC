@model List<Relatorio>
@{
    ViewData["Title"] = "Relatorios";
}

<h1>Relatorios</h1>

<div class="row">
    <div class="col-md-12">

        <form id="formPesquisa">
            <label for="nomePesquisa">Pesquisar:</label>
            <div class="btn-header">
                <div class="form-group1">
                    <div>
                        <input type="text" id="nomePesquisa" class="form-control" />
                    </div>
                    <button type="button" class="btn btn-primary" onclick="pesquisarFiliais()">Pesquisar</button>
                </div>
                <button class="btn-primary" asp-controller="Relatorio" asp-action="Create">Adicionar Relatorio</button>
            </div>
        </form>

        <table class="table">
            <thead>
                <tr>
                    <td>Codigo relatorio</td>
                    <td>Valor</td>
                    <td>Codigo agendamento</td>
                    <td>Opções</td>
                </tr>
            </thead>
            <tbody id="tabelaFiliais">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CodRelatorio</td>
                        <td>@item.Valor</td>
                        <td>@item.FkAgendaCodAgenda</td>
                        <td class="icon-td">

                            <a asp-controller="Relatorio" asp-action="GetInfo" asp-route-id="@item.CodRelatorio">
                                <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24">
                                    <path d="M480-320q75 0 127.5-52.5T660-500q0-75-52.5-127.5T480-680q-75 0-127.5 52.5T300-500q0 75 52.5 127.5T480-320Zm0-72q-45 0-76.5-31.5T372-500q0-45 31.5-76.5T480-608q45 0 76.5 31.5T588-500q0 45-31.5 76.5T480-392Zm0 192q-146 0-266-81.5T40-500q54-137 174-218.5T480-800q146 0 266 81.5T920-500q-54 137-174 218.5T480-200Zm0-300Zm0 220q113 0 207.5-59.5T832-500q-50-101-144.5-160.5T480-720q-113 0-207.5 59.5T128-500q50 101 144.5 160.5T480-280Z"/>
                                </svg>
                            </a>

                            <a asp-controller="Relatorio" asp-action="Edit" asp-route-id="@item.CodRelatorio">
                                <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24">
                                    <path d="M200-200h57l391-391-57-57-391 391v57Zm-80 80v-170l528-527q12-11 26.5-17t30.5-6q16 0 31 6t26 18l55 56q12 11 17.5 26t5.5 30q0 16-5.5 30.5T817-647L290-120H120Zm640-584-56-56 56 56Zm-141 85-28-29 57 57-29-28Z"/>
                                </svg>
                            </a>

                            <a asp-controller="Relatorio" asp-action="Delete" asp-route-id="@item.CodRelatorio">
                                <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24">
                                    <path d="M280-120q-33 0-56.5-23.5T200-200v-520h-40v-80h200v-40h240v40h200v80h-40v520q0 33-23.5 56.5T680-120H280Zm400-600H280v520h400v-520ZM360-280h80v-360h-80v360Zm160 0h80v-360h-80v360ZM280-720v520-520Z"/>
                                </svg>
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>

    function pesquisarFiliais() {
        var nomePesquisa = document.getElementById("nomePesquisa").value.toLowerCase();
        var tabelaFiliais = document.getElementById("tabelaFiliais");
        var linhas = tabelaFiliais.getElementsByTagName("tr");

        for (var i = 1; i < linhas.length; i++) { // Começa de 1 para pular o cabeçalho
            var colunaNome = linhas[i].getElementsByTagName("td")[0].textContent.toLowerCase();

            if (colunaNome.includes(nomePesquisa)) {
                linhas[i].style.display = "";
            } else {
                linhas[i].style.display = "none";
            }
        }
    }

    document.getElementById("nomePesquisa").addEventListener("input", pesquisarFiliais);
</script>


