@model Relatorio;
@{
    ViewData["Title"] = "Deletar Relatorio";
}

<h1>Deletar Relatorio</h1>
<form asp-action="DeletarRelatorio" asp-controller="Relatorio" method="post">

    <div class="row">

        <div class="col-lg-12">

            <div class="form-group">
                <label>Codigo:</label>
                <input asp-for="CodRelatorio" type="text" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label>Descricao:</label>
                <input asp-for="DescRelatorio" type="text" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label>Codigo agendamento</label>
                <input asp-for="FkAgendaCodAgenda" type="text" class="form-control" readonly>
            </div>

            <div class="form-group-2">
                <center>
                    <button type="submit" class="btn-delete">Excluir Relatorio</button>
                    <button class="btn-secondary"><a asp-action="Get" asp-controller="Relatorio">Cancelar</a></button>
                </center>
            </div>

        </div>

    </div>

</form>