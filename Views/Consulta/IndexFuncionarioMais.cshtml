@model DateFilter;

@{
    ViewData["Title"] = "Gerar Relatorio";
}

<h1>Consultar funcionario que mais vendeu</h1>

<div class="row">
    <div class="col-md-12">

        <form id="FiltroData" asp-action="GetFuncionarioMais" asp-controller="Consulta" method="post">
            <div class="form-group">
                <label>Selecione a data inicial:</label>
                <input asp-for="DataIni" type="date" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Selecione a data final:</label>
                <input asp-for="DataFin" type="date" class="form-control" required>
            </div>

            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>

            <div class="card-footer">
                <center>
                    <button type="submit" class="btn-primary">Consultar</button>
                </center>
            </div>
        </form>
    </div>
</div>