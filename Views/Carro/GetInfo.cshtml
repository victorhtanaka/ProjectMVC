@model Carro;
@{
    ViewData["Title"] = "Ver Carro";
}
@{
    IEnumerable<Filial>? Filiais = ViewData["Filiais"] as IEnumerable<Filial>;

    Filial? filialDoFuncionario = Filiais.FirstOrDefault(f => f.CodFilial == Model.FkFilialCodFilial);
}
<h1>Informacoes Detalhadas</h1>
    <div class="row">

        <div class="col-lg-12">

            <div class="form-group">
                <h3>Codigo:</h3>
                <p>@Model.CodCarro</p>
            </div>

            <div class="form-group">
                <h3>Numero do Chassi:</h3>
                <p>@Model.NumChassi</p>
            </div>

            <div class="form-group">
                <h3>Modelo do carro:</h3>
                <p>@Model.ModeloCarro</p>
            </div>

            <div class="form-group">
                <h3>Marca do carro:</h3>
                <p>@Model.MarcaCarro</p>
            </div>

            <div class="form-group">
                <h3>Ano do carro:</h3>
                <p>@Model.AnoCarro</p>
            </div>

            <div class="form-group">
                <h3>Cor do carro:</h3>
                <p>@Model.CorCarro</p>
            </div>

            <div class="form-group">
                <h3>Valor do carro:</h3>
                <p>@Model.ValorCarro</p>
            </div>

            <div class="form-group">
                <h3>Quilometragem:</h3>
                <p>@Model.KmCarro</p>
            </div>

            <div class="form-group">
                <h3>Filial:</h3>
                <p>@(filialDoFuncionario != null ? filialDoFuncionario.NomeFilial : "Filial n√£o encontrada")</p>
            </div>
            </div>
        </div>
    </div>