@model Venda;
@{
    ViewData["Title"] = "Ver Venda";
    
    IEnumerable<Cliente>? Clientes = ViewData["Clientes"] as IEnumerable<Cliente>;
    IEnumerable<Carro>? Carros = ViewData["Carros"] as IEnumerable<Carro>;
    IEnumerable<Funcionario>? Funcionarios = ViewData["Funcionarios"] as IEnumerable<Funcionario>;

    Cliente? ClienteDaVenda = Clientes.FirstOrDefault(c => c.CodCliente == Model.FkClienteCodCliente);
    Carro? CarroDaVenda = Carros.FirstOrDefault(c => c.CodCarro == Model.FkCarroCodCarro);
    Funcionario? FuncionarioDaVenda = Funcionarios.FirstOrDefault(f => f.CodFuncionario == Model.FkFuncionarioCodFuncionario);
}

<h1>Informacoes Detalhadas</h1><br>
<div class="row">

    <div class="col-lg-12">
        <h2>Dados gerais</h2>
        <div class="dados-venda">
            <div class="form-group">
                <label>Codigo:</label>
                <p>@Model.CodVenda</p>
            </div>

            <div class="form-group">
                <label>Data da venda:</label>
                <p>@Model.DataVenda</p>
            </div>

            <div class="form-group">
                <label>Ultima revisao:</label>
                <p>@Model.UltimaRevisao</p>
            </div>
        </div><br>

        <h2>Funcionario da venda</h2>
        <div class="func-venda">
            <div class="form-group">
                <label>Codigo vendedor:</label>
                <p>@FuncionarioDaVenda.CodFuncionario</p>
            </div>
            <div class="form-group">
                <label>Nome vendedor:</label>
                <p>@FuncionarioDaVenda.NomeFuncionario</p>
            </div>
            <div class="form-group">
                <label>Cpf vendedor:</label>
                <p>@FuncionarioDaVenda.CPFFuncionario</p>
            </div>
        </div><br>

        <h2>Cliente da venda</h2>
        <div class="cliente-venda">
            <div class="form-group">
                <label>Codigo cliente:</label>
                <p>@ClienteDaVenda.CodCliente</p>
            </div>
            <div class="form-group">
                <label>Nome cliente:</label>
                <p>@ClienteDaVenda.NomeCliente</p>
            </div>
            <div class="form-group">
                <label>Cpf cliente:</label>
                <p>@ClienteDaVenda.CPFCliente</p>
            </div>
            <div class="form-group">
                <label>Tel cliente:</label>
                <p>@ClienteDaVenda.TelCliente</p>
            </div>
            <div class="form-group">
                <label>Email cliente:</label>
                <p>@ClienteDaVenda.EmailCliente</p>
            </div>
        </div><br>

        <h2>Carro da venda</h2>
        <div class="carro-venda">
            <div class="form-group">
                <label>Codigo carro:</label>
                <p>@CarroDaVenda.CodCarro</p>
            </div>
            <div class="form-group">
                <label>Chassi carro:</label>
                <p>@CarroDaVenda.NumChassi</p>
            </div>
            <div class="form-group">
                <label>Modelo carro:</label>
                <p>@CarroDaVenda.ModeloCarro</p>
            </div>
            <div class="form-group">
                <label>Valor carro:</label>
                <p>@CarroDaVenda.ValorCarro</p>
            </div>
            <div class="form-group">
                <label>Ano do carro:</label>
                <p>@CarroDaVenda.AnoCarro</p>
            </div>
            <div class="form-group">
                <label>Cor do carro:</label>
                <p>@CarroDaVenda.CorCarro</p>
            </div>
        </div>
    
        </div>
    </div>
</div>