@model Servico;
@{
    ViewData["Title"] = "Ver Servico";
}
<h1>Informacoes Detalhadas</h1>
    <div class="row">

        <div class="col-lg-12">

            <div class="form-group">
                <h3>Codigo:</h3>
                <p>@Model.CodServico</p>
            </div>

            <div class="form-group">
                <h3>Nome:</h3>
                <p>@Model.NomeServico</p>
            </div>

            <div class="form-group">
                <h3>Descricao:</h3>
                <p>@Model.DescServico</p>
            </div>

        </div>

    </div>