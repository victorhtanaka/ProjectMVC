@model Servico;
@{
    ViewData["Title"] = "Adicionar Serviço";
}

<h1>Criar Serviço</h1>
<form asp-action="CriarServico" asp-controller="Servico" method="post">

    <div class="row">

        <div class="col-lg-12">

            <div class="form-group">
                <label>Nome:</label>
                <input asp-for="NomeServico" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Descrição:</label>
                <input asp-for="DescServico" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn-primary">Adicionar Servico</button>
                    <button type="reset" asp-action="Get" asp-controller="Servico" class="btn-cancelar">Cancelar</button>
                </center>
            </div>

        </div>

    </div>

</form>