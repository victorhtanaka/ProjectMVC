@model Acessorio;
@{
    ViewData["Title"] = "Deletar Acessorio";
}

<h1>Deletar Acessorio</h1>
<form asp-action="DeletarAcessorio" asp-controller="Acessorio" method="post">

    <div class="row">

        <div class="col-lg-12">

            <div class="form-group">
                <label>Codigo:</label>
                <input asp-for="CodAcessorio" type="text" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label>Nome:</label>
                <input asp-for="NomeAcessorio" type="text" class="form-control" readonly>
            </div>

            <div class="form-group-2">
                <center>
                    <button type="submit" class="btn-delete">Excluir Acessorio</button>
                    <button class="btn-secondary"><a asp-action="Get" asp-controller="Acessorio">Cancelar</a></button>
                </center>
            </div>

        </div>

    </div>

</form>