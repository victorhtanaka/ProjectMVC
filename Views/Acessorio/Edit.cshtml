@model Acessorio;
@{
    ViewData["Title"] = "Editar Acessorio";
}
<h1>Editar Acessorio</h1>
<form asp-action="EditarAcessorio" asp-controller="Acessorio" method="post">

    <div class="row">

        <div class="col-lg-12">

            <div class="form-group">
                <label>Codigo:</label>
                <input asp-for="CodAcessorio" type="text" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label>Nome:</label>
                <input asp-for="NomeAcessorio" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn-primary">Salvar alterações</button>
                    <button class="btn-secondary"><a asp-action="Get" asp-controller="Acessorio">Cancelar</a></button>
                </center>
            </div>

        </div>

    </div>

</form>