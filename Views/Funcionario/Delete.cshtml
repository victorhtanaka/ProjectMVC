@model Funcionario;
@{
    ViewData["Title"] = "Deletar Funcionario";
}
@{
   IEnumerable<Filial> Filiais = ViewData["Filiais"] as IEnumerable<Filial>;
    IEnumerable<Funcao> Funcoes = ViewData["Funcoes"] as IEnumerable<Funcao>;
}
<h1>Deletar Funcionarios</h1>
<form asp-action="DeletarFuncionario" asp-controller="Funcionario" method="post">

    <div class="row">

        <div class="col-lg-12">

            <div class="form-group">
                <label>Codigo:</label>
                <input asp-for="CodFuncionario" type="text" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label>Nome:</label>
                <input asp-for="NomeFuncionario" type="text" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label>CPF:</label>
                <input asp-for="CPFFuncionario" type="text" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label>Endereço:</label>
                <input asp-for="EndFuncionario" type="text" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input asp-for="EmailFuncionario" type="email" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label>Telefone:</label>
                <input asp-for="TelFuncionario" type="tel" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label>Data de Nascimento:</label>
                <input asp-for="DataNasc" type="date" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label>Salário:</label>
                <input asp-for="SalarioFuncionario" type="text" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label>Filial:</label>
                <select asp-for="FkFilialCodFilial" class="form-control" readonly>
                    @foreach(var filial in ViewData["Filiais"] as List<Filial>)
                    {
                        <option value="@filial.CodFilial">@filial.NomeFilial</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label>Funçao:</label>
                <select asp-for="FkFuncaoCodFuncao" class="form-control" readonly>
                    @foreach(var funcao in ViewData["Funcoes"] as List<Funcao>)
                    {
                        <option value="@funcao.CodFuncao">@funcao.NomeFuncao</option>
                    }
                </select>
            </div>

            <div class="form-group-2">
                <center>
                    <button type="submit" class="btn-delete">Excluir Funcionario</button>
                    <a asp-action="Get" asp-controller="Funcionario" class="btn-cancelar">Cancelar</a>
                </center>
            </div>

        </div>

    </div>

</form>