@model Funcionario;
@{
    ViewData["Title"] = "Editar Funcionario";
}
@{
   IEnumerable<Filial> Filiais = ViewData["Filiais"] as IEnumerable<Filial>;
    IEnumerable<Funcao> Funcoes = ViewData["Funcoes"] as IEnumerable<Funcao>;
}

<form asp-action="Editar" asp-controller="Funcionario" method="post">

    <div class="row">

        <div class="col-lg-12">

            <div class="form-group">
                <label>Nome:</label>
                <input asp-for="NomeFuncionario" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <label>CPF:</label>
                <input asp-for="CPFFuncionario" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Endereço:</label>
                <input asp-for="EndFuncionario" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input asp-for="EmailFuncionario" type="email" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Telefone:</label>
                <input asp-for="TelFuncionario" type="tel" pattern="[0-9]{2}( |-)?[0-9]{9}" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Data de Nascimento:</label>
                <input asp-for="DataNasc" type="date" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Salário:</label>
                <input asp-for="SalarioFuncionario" type="text" class="form-control" required>
            </div>

            <div class="form-group">
                <label>Filial:</label>
                <select asp-for="FkFilialCodFilial" class="form-control" required>
                    @foreach(var filial in ViewData["Filiais"] as List<Filial>)
                    {
                        <option value="@filial.CodFilial">@filial.NomeFilial</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label>Funçao:</label>
                <select asp-for="FkFilialCodFilial" class="form-control" required>
                    @foreach(var filial in ViewData["Filiais"] as List<Filial>)
                    {
                        <option value="@filial.CodFilial">@filial.NomeFilial</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn-primary">Salvar Funcionario</button>
                    <a asp-action="Index" asp-controller="Funcionario" class="btn-secondary"></a>
                </center>
            </div>

        </div>

    </div>

</form>